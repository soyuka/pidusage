{
  "name": "pidusage",
  "version": "2.0.8",
  "description": "Cross-platform process cpu % and memory usage of a PID",
  "license": "MIT",
  "homepage": "https://github.com/soyuka/pidusage",
  "repository": "github:soyuka/pidusage",
  "bugs": {
